<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed_items" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "application.welcome" %></h1>
    <h2><%= t("static_pages.home.des",
      link_home: link_to(t("static_pages.paragraph.ror"),
      t("static_pages.link.home"))).html_safe %></h2>
    <%= link_to t("static_pages.paragraph.signup"), signup_path,
      class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: t("static_pages.image_alt.rails")),
    t("static_pages.link.rubyonrails") %>
<% end %>
